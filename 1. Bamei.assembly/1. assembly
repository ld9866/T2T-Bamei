# hifiasm
hifiasm -o Bamei.hifi.ont.hic -t 256 --h1 Bamei_1.clean.fq.gz --h2 Bamei_2.clean.fq.gz --ul Bamei.ont.fastq.gz Bamei.hifi.fq.gz 2> Bamei.hifi.ont.hic.log
awk '/^S/{print ">"$2;print $3}' hifiasm.gfa > hifiasm.fa

# verkko
verkko -d Bamei.verrkko --hifi Bamei.hifi.fastq.gz --nano Bamei.ont.fastq.gz --hic1 Bamei.HiC_R1.clean.fastq.gz --hic2 Bamei.HiC_R2.clean.fastq.gz --local-memory 600 2>log

# nextdenovo
nextDenovo run.cfg

# Hi-C
# prepare
python /home/lidong/Software/juicer-1.6/misc/generate_site_positions.py MboI draft.genome Bamei.fasta
awk 'BEGIN{OFS="\t"}{print $1, $NF}' draft.genome_MboI.txt > draft.genome.chrom.sizes
# jucier
/home/lidong/Software/juicer-1.6/CPU/juicer.sh -g Bamei \
-s MboI \
-D /home/lidong/Software/juicer-1.6 -z /ref/Bamei.fasta \
-y /ref/draft.genome_MboI.txt \
-p /ref/draft.genome.chrom.sizes \
-t 128 &>juicer.log

# 3DDNA-human-correct
awk -f /home/lidong/Software/3d-dna-201008/utils/wrap-fasta-sequence.awk tabasco.fa > Bamei.wrapped.fa
/home/lidong/Software/3d-dna-201008/run-asm-pipeline.sh -r 0 Bamei.wrapped.fa merged_nodups.txt
# human check
/home/lidong/Software/3d-dna-201008/run-asm-pipeline-post-review.sh -r Bamei.wrapped.assembly Bamei.wrapped.fa merged_nodups.txt 

# Mitochondrial assembly
docker run --rm \
--volume /home/lidong:/work \
ghcr.io/marcelauliano/mitohifi:master \
mitohifi.py \
-c /work/Bamei.hifi.bp.p_ctg.fa \
-f /work/sequence.fasta \
-g /work/sequence.gb \
-t 64 -a animal
